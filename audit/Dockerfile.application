ARG image_tag=latest

FROM libero/reviewer_audit_typescript:${image_tag} AS audit_typescript

FROM node:10-alpine
MAINTAINER eLife Reviewer Product Team <reviewer-product@elifesciences.org>

WORKDIR /app

COPY --from=audit_typescript /app/node_modules/ ./node_modules/
COPY --from=audit_typescript /app/dist/ ./dist/

EXPOSE 3004

HEALTHCHECK --interval=1m --timeout=1s \
	CMD curl -f http://localhost:3004/health || exit 1

CMD ["node", "dist/main.js"]
